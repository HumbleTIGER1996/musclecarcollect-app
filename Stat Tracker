                {name: "Brake Bias Adjustment for Weight Distribution", spd: 0, acc: 0, hndl: 0, brk: 2, type: "mod"},
                {name: "Brake Proportioning Valve Adjustment", spd: 0, acc: 0, hndl: 0, brk: 1, type: "mod"}
            ],
            protection: [
                {name: "Protection Card", spd: 0, acc: 0, hndl: 0, brk: 0, flavor: "Generic protection placeholder.", type: "protection"}
            ]
        };

        // Garage state
        let garages = Array(3).fill().map(() => ({ car: null, mods: Array(3).fill(null) }));

        // Render
        function render() {
            const container = document.getElementById('garages');
            container.innerHTML = '';
            garages.forEach((g, i) => {
                const div = document.createElement('div');
                div.className = 'garage';
                const carText = g.car ? `${g.car.name}<br><small>${g.car.flavor}</small>` : 'Empty Car Slot';
                div.innerHTML = `
                    <h2>Garage ${i+1}</h2>
                    <div class="clear-garage" onclick="clearGarage(${i})">Clear Garage</div>
                    <div class="car" onclick="openSearchForSlot('car', ${i})">
                        ${carText}
                        <div class="minus" onclick="event.stopPropagation(); clearSlot('car', ${i})">-</div>
                        <div class="plus">+</div>
                    </div>
                    <div class="stats">SPD: ${calc('spd', i)} | ACC: ${calc('acc', i)} | HNDL: ${calc('hndl', i)} | BRK: ${calc('brk', i)}</div>
                    <div class="mods">
                        ${g.mods.map((m, j) => `
                            <div class="slot ${m ? 'filled' : ''}" onclick="openSearchForSlot('mod', ${i}, ${j})">
                                ${m ? m.name : 'Mod ' + (j+1)}
                                <div class="minus" onclick="event.stopPropagation(); clearSlot('mod', ${i}, ${j})">-</div>
                                <div class="plus">+</div>
                            </div>
                        `).join('')}
                    </div>
                `;
                container.appendChild(div);
            });
        }

        function calc(stat, i) {
            let total = garages[i].car ? garages[i].car[stat] || 0 : 0;
            garages[i].mods.forEach(m => total += m ? m[stat] || 0 : 0);
            return total;
        }

        // Search with slot type filtering
        let currentSlot = null;
        document.getElementById('search').addEventListener('input', e => {
            const q = e.target.value.toLowerCase();
            const res = document.getElementById('searchResults');
            res.innerHTML = q.length < 2 ? '' : '';
            if (q.length < 2) return;

            let list = [];
            if (!currentSlot || currentSlot.type === 'car') list = list.concat(database.cars);
            if (!currentSlot || currentSlot.type === 'mod') list = list.concat(database.mods, database.protection);

            list.filter(c => c.name.toLowerCase().includes(q)).slice(0, 10).forEach(c => {
                const div = document.createElement('div');
                div.className = 'result';
                div.textContent = c.name;
                div.onclick = () => addToCurrentSlot(c);
                res.appendChild(div);
            });
        });

        function openSearchForSlot(type, garage, slot = null) {
            currentSlot = {type, garage, slot};
            document.getElementById('search').value = '';
            document.getElementById('searchResults').innerHTML = '';
            document.getElementById('search').focus();
        }

        function addToCurrentSlot(card) {
            if (!currentSlot) return;
            const {type, garage, slot} = currentSlot;
            if (type === 'car' && card.type !== 'car') {
                alert('Only cars allowed in car slot!');
                return;
            }
            if (type === 'mod' && card.type === 'car') {
                alert('Only modifications or protection allowed in mod slots!');
                return;
            }
            if (type === 'car') garages[garage].car = card;
            else garages[garage].mods[slot] = card;
            document.getElementById('search').value = '';
            document.getElementById('searchResults').innerHTML = '';
            currentSlot = null;
            render();
            saveGarages();
        }

        // Clear functions
        function clearSlot(type, garage, slot = null) {
            if (type === 'car') garages[garage].car = null;
            else garages[garage].mods[slot] = null;
            render();
            saveGarages();
        }

        function clearGarage(i) {
            garages[i] = {car: null, mods: Array(3).fill(null)};
            render();
            saveGarages();
        }

        function clearAll() {
            garages = Array(3).fill().map(() => ({ car: null, mods: Array(3).fill(null) }));
            render();
            saveGarages();
        }

        // Save/Load
        function saveGarages() { localStorage.setItem('mccGarages', JSON.stringify(garages)); }
        function loadGarages() { 
            const s = localStorage.getItem('mccGarages');
            if (s) garages = JSON.parse(s);
            render();
        }

        loadGarages();
    </script>
</body>
</html>

